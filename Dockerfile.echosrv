# Build the binaries in larger image
FROM golang:1.8.3 as build
WORKDIR /go/src/github.com/fortio
COPY . fortio
RUN CGO_ENABLED=0 GOOS=linux go build -a -ldflags '-s' -o echosrv.bin github.com/fortio/fortio/echosrv
# Minimal image with just the binary
FROM scratch
COPY --from=build /go/src/github.com/fortio/echosrv.bin /usr/local/bin/echosrv
EXPOSE 8080
ENTRYPOINT ["/usr/local/bin/echosrv"]
