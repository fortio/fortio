# Build the binaries in larger image
FROM docker.io/fortio/fortio.build:v10 as build
WORKDIR /go/src/fortio.org
COPY . fortio
RUN CGO_ENABLED=0 GOOS=linux go build -a -ldflags '-s' -o echosrv.bin fortio.org/fortio/echosrv
# Minimal image with just the binary
FROM scratch
COPY --from=build /go/src/fortio.org/echosrv.bin /usr/local/bin/echosrv
EXPOSE 8080
ENTRYPOINT ["/usr/local/bin/echosrv"]
