# Build the binaries in larger image
FROM docker.io/fortio/fortio.build:v10 as build
WORKDIR /go/src/fortio.org
COPY . fortio
# TODO: share common part with main Dockerfile (have the main Dockerfile build more than 1 image - how?)
RUN echo "$(date +'%Y-%m-%d %H:%M') $(cd fortio; git rev-parse HEAD)" > /build-info.txt
RUN echo "-s -X \"fortio.org/fortio/version.buildInfo=$(cat /build-info.txt)\" \
  -X fortio.org/fortio/version.tag=$(cd fortio; git describe --tags) \
  -X fortio.org/fortio/version.gitstatus=$(cd fortio; git status --porcelain | wc -l)" > /link-flags.txt
RUN CGO_ENABLED=0 GOOS=linux go build -a -ldflags "$(cat /link-flags.txt)" -o fcurl.bin fortio.org/fortio/fcurl
# Minimal image with just the binary
FROM scratch
COPY --from=build /etc/ssl/certs/ca-certificates.crt /etc/ssl/certs/
COPY --from=build /go/src/fortio.org/fcurl.bin /usr/local/bin/fcurl
ENTRYPOINT ["/usr/local/bin/fcurl"]
